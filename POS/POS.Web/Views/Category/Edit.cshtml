@model POS.ViewModel.CategoryModel

@{
    ViewBag.Title = "Edit Category";
    Layout = "_Layout";
}

<div class="card-header">
    <h3>Edit Category</h3>
</div>
<div class="card-body">
    <form asp-controller="Category" asp-action="Update" method="post">
        <div class="row">
            <input type="hidden" asp-for="Id" />
            <div class="col-sm-4">
                <div class="form-group">
                    <label asp-for="CategoryName" class="floating-label" for="CategoryName">Category Name</label>
                    <input asp-for="CategoryName" class="form-control" id="CategoryName" />
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    <label asp-for="Description" class="floating-label" for="CategoryDescription">Description</label>
                    <input asp-for="Description" class="form-control" id="CategoryDescription" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    <label asp-for="Picture" class="floating-label" for="CatPicture">Picture</label>
                    <input asp-for="Picture" class="form-control" id="CatPicture" />
                    <span asp-validation-for="Picture" class="text-danger"></span>
                </div>
            </div>
        </div>
        <a type="reset" asp-controller="Category" asp-action="Index" class="btn btn-secondary">Cancel</a>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
