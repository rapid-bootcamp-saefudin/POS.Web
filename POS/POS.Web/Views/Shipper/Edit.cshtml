@model POS.ViewModel.ShipperModel

@{
    ViewBag.Title = "Edit Shipper";
    Layout = "_Layout";
}

<div class="bg-success p-2 text-dark bg-opacity-25 card-header">
    <h3>Edit Shipper</h3>
</div>
<div class="card-body">
    <form asp-controller="Shipper" asp-action="Update" method="post">
        <div class="row">
            <input type="hidden" asp-for="Id" />
            <div class="col-sm-4">
                <div class="form-group">
                    <label asp-for="CompanyName" class="floating-label" for="CompanyName">Company Name</label>
                    <input asp-for="CompanyName" class="form-control" id="CompanyName" />
                    <span asp-validation-for="CompanyName" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    <label asp-for="Phone" class="floating-label" for="Phone">Phone</label>
                    <input asp-for="Phone" class="form-control" id="Phone" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
            </div>
        </div>
        <a type="reset" asp-controller="Shipper" asp-action="Index" class="btn btn-secondary">Cancel</a>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
