@model POS.ViewModel.ShipperModel

<div class="card-header">
    <h3>Add New Shipper</h3>
</div>
<div class="card-body">
    <form asp-controller="Shipper" asp-action="Create" method="post">
        <div class="row">
            <div class="col-sm-12 mb-4">
                <div class="form-group">
                    <label asp-for="CompanyName" class="floating-label" for="CompanyName">Company Name</label>
                    <input asp-for="CompanyName" class="form-control" id="CompanyName" />
                    <span asp-validation-for="CompanyName" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-12 mb-4">
                <div class="form-group">
                    <label asp-for="Phone" class="floating-label" for="Phone">Phone</label>
                    <input asp-for="Phone" class="form-control" id="Phone" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
            </div>
        </div>
        <button type="button" class="btn  btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
