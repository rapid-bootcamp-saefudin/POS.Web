@model POS.ViewModel.SupplierModel

<div class="bg-success p-2 text-dark bg-opacity-25 card-header">
    <h3>Add New Supplier</h3>
</div>
<div class="card-body">
    <form asp-controller="Supplier" asp-action="Create" method="post">
        <div class="row">
            <div class="col-sm-12 mb-4">
                <div class="form-group">
                    <label asp-for="CompanyName" class="floating-label" for="CompanyName">Company Name</label>
                    <input asp-for="CompanyName" class="form-control" id="CompanyName" />
                    <span asp-validation-for="CompanyName" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-12 mb-4">
                <div class="form-group">
                    <label asp-for="ContactName" class="floating-label" for="ContactName">Contact Name</label>
                    <input asp-for="ContactName" class="form-control" id="ContactName" />
                    <span asp-validation-for="ContactName" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-12 mb-4">
                <div class="form-group">
                    <label asp-for="ContactTitle" class="floating-label" for="ContactTitle">Contact Title</label>
                    <input asp-for="ContactTitle" class="form-control" id="ContactTitle" />
                    <span asp-validation-for="ContactTitle" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-12 mb-4">
                <div class="form-group">
                    <label asp-for="Address" class="floating-label" for="Address">Address</label>
                    <input asp-for="Address" class="form-control" id="Address" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-12 mb-4">
                <div class="form-group">
                    <label asp-for="City" class="floating-label" for="City">City</label>
                    <input asp-for="City" class="form-control" id="City" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-12 mb-4">
                <div class="form-group">
                    <label asp-for="Region" class="floating-label" for="Region">Region</label>
                    <input asp-for="Region" class="form-control" id="Region" />
                    <span asp-validation-for="Region" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-12 mb-4">
                <div class="form-group">
                    <label asp-for="PostalCode" class="floating-label" for="PostalCode">Postal Code</label>
                    <input asp-for="PostalCode" class="form-control" id="PostalCode" />
                    <span asp-validation-for="PostalCode" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-12 mb-4">
                <div class="form-group">
                    <label asp-for="Country" class="floating-label" for="Country">Country</label>
                    <input asp-for="Country" class="form-control" id="Country" />
                    <span asp-validation-for="Country" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-12 mb-4">
                <div class="form-group">
                    <label asp-for="Phone" class="floating-label" for="Phone">Phone</label>
                    <input asp-for="Phone" class="form-control" id="Phone" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-12 mb-4">
                <div class="form-group">
                    <label asp-for="Fax" class="floating-label" for="Fax">Fax</label>
                    <input asp-for="Fax" class="form-control" id="Fax" />
                    <span asp-validation-for="Fax" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-12 mb-4">
                <div class="form-group">
                    <label asp-for="HomePage" class="floating-label" for="HomePage">Home Page</label>
                    <input asp-for="HomePage" class="form-control" id="HomePage" />
                    <span asp-validation-for="HomePage" class="text-danger"></span>
                </div>
            </div>
        </div>
        <button type="button" class="btn  btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
