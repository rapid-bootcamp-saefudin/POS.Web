@model POS.ViewModel.EmployeeModel

@{
    ViewBag.Title = "Employee Detail";
    Layout = "_Layout";
}

<div class="card-header">
    <h3>Employee Detail</h3>
</div>
<div class="card-body">
    <div class="row d-flex justify-content-center">
        <div class="col-md-6">
