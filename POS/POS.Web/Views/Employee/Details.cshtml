                <label for="LastName" class="col-sm-3 col-form-label"><strong>Last Name</strong></label>
                <div class="col-sm-9">
                    <label id="LastName" class="form-control-plaintext">@Model.LastName</label>
                </div>
            </div>
            <hr />
            <div class="form-group row">
                <label for="FirstName" class="col-sm-3 col-form-label"><strong>First Name</strong></label>
                <div class="col-sm-9">
                    <label id="FirstName" class="form-control-plaintext">@Model.FirstName</label>
                </div>
            </div>
            <hr />
            <div class="form-group row">
                <label for="Title" class="col-sm-3 col-form-label"><strong>Title</strong></label>
                <div class="col-sm-9">
                    <label id="Title" class="form-control-plaintext">@Model.Title</label>
                </div>
            </div>
            <hr />
            <div class="form-group row">
                <label for="TitleOfCourtesy" class="col-sm-3 col-form-label"><strong>Title Of Courtesy</strong></label>
                <div class="col-sm-9">
                    <label id="TitleOfCourtesy" class="form-control-plaintext">@Model.TitleOfCourtesy</label>
                </div>
            </div>
            <hr />
            <div class="form-group row">
                <label for="Address" class="col-sm-3 col-form-label"><strong>Address</strong></label>
                <div class="col-sm-9">
                    <label id="Address" class="form-control-plaintext">@Model.Address</label>
                </div>
            </div>
            <hr />
            <div class="form-group row">
                <label for="City" class="col-sm-3 col-form-label"><strong>City</strong></label>
                <div class="col-sm-9">
                    <label id="City" class="form-control-plaintext">@Model.City</label>
                </div>
            </div>
            <hr />
            <div class="form-group row">
                <label for="Region" class="col-sm-3 col-form-label"><strong>Region</strong></label>
