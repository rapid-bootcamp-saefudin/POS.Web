@model IEnumerable<POS.Repository.EmployeeEntity>

@{
    ViewBag.Title = "Get All Employees";
    Layout = "_Layout";
}

<div class="bg-success p-2 text-dark bg-opacity-25 card-header">
    <h3>Get All Employees</h3>
</div>
<div class="card-body">
    <div class="table-responsive">
        <a asp-action="AddModal" class="btn btn-sm btn-outline-primary mt-2 mb-2" id="btn-add"><i class="feather icon-plus"></i>New Employee</a>
        <table class="table table-hover mb-0">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Last Name</th>
                    <th>First Name</th>
                    <th>Title</th>
                    <th>Title Of Courtesy</th>
                    <th>BirthDate</th>
                    <th>HireDate</th>
                    <th>Address</th>
                    <th>City</th>
                    <th>Region</th>
                    <th>Postal Code</th>
                    <th>Country</th>
                    <th>Home Phone</th>
                    <th>Extension</th>
                    <th>Photo</th>
                    <th>Notes</th>
                    <th>Reports To</th>
                    <th>Photo Path</th>
                    <th class="text-center">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.LastName</td>
                        <td>@item.FirstName</td>
                        <td>@item.Title</td>
                        <td>@item.TitleOfCourtesy</td>
                        <td>@item.BirthDate</td>
                        <td>@item.HireDate</td>
                        <td>@item.Address</td>
                        <td>@item.City</td>
                        <td>@item.Region</td>
                        <td>@item.PostalCode</td>
                        <td>@item.Country</td>
                        <td>@item.HomePhone</td>
                        <td>@item.Extension</td>
                        <td>@item.Photo</td>
                        <td>@item.Notes</td>
                        <td>@item.ReportsTo</td>
                        <td>@item.PhotoPath</td>
                        <td class="text-center">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                <i class="feather icon-info">Detail</i>
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                                <i class="feather icon-edit">Edit</i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                <i class="feather icon-trash">Delete</i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div id="my-modal" class="modal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Modal title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">

            </div>
        </div>
    </div>
</div>

@section Scripts
    {
    <script type="text/javascript">
        $("#btn-add").on("click", function (e) {
            e.preventDefault();
            $.ajax({
                url: "/Employee/AddModal",
                type: "GET",
                dataType: "html",
                success: function (data) {
                    $("#my-modal").find(".modal-body").html(data);
                    $("#my-modal").modal("show");
                }
            });

        });
    </script>
}
